{
    "compileOnSave": true,
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "es6",
            "dom",
            "esnext",
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es6",
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/__snapshots__/*",
    ],
}
